<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_reamaze" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.reamaze</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Reamaze" string="Reamaze" name="reamaze_integration">
                    <block title="Credenciales API" name="reamaze_settings">
                        <setting id="reamaze_credentials_setting">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="reamaze_brand" class="col-lg-3 o_light_label"/>
                                    <field name="reamaze_brand"/>
                                </div>
                                <div class="row mt16">
                                    <label for="reamaze_login_email" class="col-lg-3 o_light_label"/>
                                    <field name="reamaze_login_email"/>
                                </div>
                                <div class="row mt16">
                                    <label for="reamaze_api_token" class="col-lg-3 o_light_label"/>
                                    <field name="reamaze_api_token" password="True"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>